#--------------------------------------------------------------------
# Example Environment Configuration File
#
# This file demonstrates the kind of things you can set in your .env file.
# To use it, copy it to .env and modify the values as needed.
#
# You can delete comments from this file to make it cleaner.
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

# Set to 'development', 'testing', or 'production'
CI_ENVIRONMENT=development

#--------------------------------------------------------------------
# APP CONFIGURATION
#--------------------------------------------------------------------

# Base URL for your application
# For localhost: http://localhost:8080/
# For Hostinger: https://yourdomain.com/
app.baseURL=http://localhost:8080/

# Force HTTPS globally
# Set to 'true' for production (Hostinger)
# Set to 'false' for development (localhost)
app.forceGlobalSecureRequests=false

# Debug mode
# Set to '1' for development
# Set to '0' for production
CI_DEBUG=1

#--------------------------------------------------------------------
# DATABASE CONFIGURATION
#--------------------------------------------------------------------

# For localhost development
# database.hostname=localhost
# database.username=Shiro
# database.password=
# database.database=capsdb

# For Hostinger production, replace with Hostinger credentials:
# database.hostname=localhost (or your Hostinger DB host)
# database.username=yourusername_user (from Hostinger cPanel)
# database.password=your_secure_password (from Hostinger cPanel)
# database.database=yourusername_capsdb (from Hostinger cPanel)

database.hostname=localhost
database.username=Shiro
database.password=
database.database=capsdb
database.port=3306
database.driver=MySQLi

# Database debug mode
database.debug=true

# Character encoding
database.charset=utf8mb4
database.collation=utf8mb4_general_ci

#--------------------------------------------------------------------
# SECURITY
#--------------------------------------------------------------------

# CSRF Protection
CSRF_PROTECTION=true

# Session Configuration
SESSION_DRIVER=files
SESSION_MATCH_IP=false
SESSION_TIME_TO_UPDATE=300

# CORS Settings
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

#--------------------------------------------------------------------
# LOGGING
#--------------------------------------------------------------------

# Log level: emergency, alert, critical, error, warning, notice, info, debug
LOG_LEVEL=debug

# Log channel: single, daily, syslog, errorlog
LOG_CHANNEL=single

#--------------------------------------------------------------------
# FILE UPLOADS
#--------------------------------------------------------------------

# Maximum upload size in bytes (10MB default)
MAX_UPLOAD_SIZE=10485760

# Allowed upload directories
UPLOAD_PATH=/writable/uploads/
