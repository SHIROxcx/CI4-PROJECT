node_modules/
npm-debug.log
yarn-error.log
package-lock.json

# IDE and Editor Files
.vscode/
.idea/
*.sublime-project
*.sublime-workspace
.DS_Store
Thumbs.db

# OS Files
*.swp
*.swo
*~
.directory

# PHP
*.log
*.cache

# Testing
phpunit.xml
.phpunit.result.cache

# Build Files
/build/
/dist/

# Backup Files
*.bak
*.tmp
*.temp

# System Files
.htaccess
php_errors.log

# User Uploads (keep structure, ignore content)
public/uploads/*
